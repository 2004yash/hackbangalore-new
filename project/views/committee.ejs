        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<style>
    @import url("https://fonts.googleapis.com/css2?family=Aleo:ital,wght@0,100..900;1,100..900&family=Gothic+A1&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Zilla+Slab:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap");

    /* styles.css */
    /* styles.css */
    body {
        font-family: "Gothic A1", sans-serif;
        /* Added sans-serif as fallback font */
        margin: 0;
        /* Reset default margin */
    }

    main {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
        /* Added padding for better spacing */
    }

    .cards {
        width: 85%;
        height: 10px;
        /* max-width: 500px; */
    }

    .card {
        width: auto;
        /* Set the width to 100% minus the padding */
        background-color: #f0f0f0;
        border-radius: 20px !important;
        /* Reduced border-radius for a smoother look */
        padding: 5px;
        margin: 10px auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: 1px solid #ccc;
        /* Added border */
        position: relative;
        /* Added position relative */
    }

    .card:hover {
        transform: scale(1.1, 1.1);
        box-shadow: 0 4px 8px rgba(42, 133, 252, 0.842);
    }

    .card {
        transition: transform 0.3s ease;
    }

    .cards:hover>.card:not(:hover) {
        filter: blur(1px);
        transform: scale(0.9, 0.9);
    }

    .card h2 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .card p {
        font-size: 16px;
        color: #333;
    }

    /* New styles for accept button */
    .accept-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: #28a745;
        /* Green color */
        color: white;
        border: none;
        border-radius: 10%;
        /* Rounded shape */
        width: auto;
        height: auto;
        font-size: 20px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .accept-btn:hover {
        background-color: #218838;
        /* Darker green on hover */
    }
</style>

<body>
    <!-- Navbar section -->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="navlogo.jpg" alt="" width="30" height="24" class="d-inline-block align-text-top" />
                Requests that need approval
            </a>
        </div>
    </nav>

    <main>
        <div class="cards">
            <% dataarr.forEach(item=> { %>
                <div class="card">
                    <div class="card-body">
                        <h2>
                            <%= item.problem %>
                        </h2>
                        <%= item.solution %>
                    </div>
                    <!-- Accept button with tick icon -->
                    <button class="accept-btn">Accept</button>
                </div>
                <% }); %>
        </div>
    </main>


    <script src="https://www.gstatic.com/firebasejs/9.4.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.4.0/firebase-database.js"></script>
    <script>
        // Initialize Firebase
        const firebaseConfig = {
            apiKey: "AIzaSyDNojoDZv0sXVDKProM666bZVwgRvqXSWs",
            authDomain: "hackbangalore-75fdc.firebaseapp.com",
            projectId: "hackbangalore-75fdc",
            storageBucket: "hackbangalore-75fdc.appspot.com",
            messagingSenderId: "899181383871",
            appId: "1:899181383871:web:b3f772eee7999a49a6b60a"
        };
        
        firebase.initializeApp(firebaseConfig);

        const insideOutDatabase = firebase.database().ref('insideOut');
        const approvedDatabase = firebase.database().ref('approved');

        // Function to handle click event of accept button
        function handleAcceptButtonClick(key) {
            // Retrieve the entire item data from insideOut database
            insideOutDatabase.child(key).once('value', snapshot => {
                const item = snapshot.val();

                // Push the item data to the approved database
                try {
                 
                approvedDatabase.push(item);
                console.log("Data pushed successfully");   
                } catch (error) {
                    console.log("Failed to push data")
                }
            });
        }

        // Add event listener to all accept buttons
        const acceptButtons = document.querySelectorAll('.accept-btn');
        acceptButtons.forEach(button => {
            button.addEventListener('click', function () {
                // Find the key associated with the item
                const key = button.dataset.key;

                // Call function to handle accept button click
                handleAcceptButtonClick(key);
            });
        });
    </script>
</body>

</html>